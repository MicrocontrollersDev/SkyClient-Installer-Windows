<Window x:Class="Skyclient.ConfirmFirstInstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skyclient"
        mc:Ignorable="d"
        Title="Install Skyclient?" SizeToContent="WidthAndHeight">
    <Border Background="{DynamicResource WindowBackgroundBrush}" MinHeight="88">
        <Grid>
            <Label Style="{DynamicResource LabelRepoItemDisplay}" Content="You don't have Skyclient installed" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Button Style="{DynamicResource ButtonNoHoverVisual}" BorderBrush="Red" BorderThickness="10" Content="Install skyclient" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Click="AcceptInstall"/>
            <Button Style="{DynamicResource ButtonNoHoverVisual}" BorderBrush="Red" BorderThickness="10" Content="No Thanks" Margin="0,52,10,0" VerticalAlignment="Top" Click="DenyInstall" HorizontalAlignment="Right" Width="56"/>
        </Grid>
    </Border>
</Window>
