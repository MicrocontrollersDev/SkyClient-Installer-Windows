<UserControl x:Class="Skyclient.Views.ActionListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skyclient.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ActionIcon"
               Style="{DynamicResource RepoItemIconRendering}"
               Height="32"
               Source="/Views/forklift certified.png">
        </Image>
        <Label x:Name="ActionText"
               Style="{DynamicResource LabelRepoItemDisplay}"
               Grid.Column="1"/>
    </Grid>
</UserControl>
